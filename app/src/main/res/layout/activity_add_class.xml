<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AddClassActivity">

    <ProgressBar
        android:id="@+id/progress_bar_add_class"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <LinearLayout
        android:id="@+id/main_add_class"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:id="@+id/error_add_class"
            android:text="error"
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/add_class_name"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class Name"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_class_submit"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:text="Submit"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:textAllCaps="false"
            android:id="@+id/add_class_back"
            android:text="Back"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>